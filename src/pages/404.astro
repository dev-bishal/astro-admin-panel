---
import AdminLayout from "../Layout/AdminLayout.astro";


---
    <style is:inline>
        @keyframes float {

            0%,
            100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-20px);
            }
        }

        @keyframes glow {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.7;
            }
        }

        .floating {
            animation: float 6s ease-in-out infinite;
        }

        .glowing {
            animation: glow 2s ease-in-out infinite;
        }

        .page-transition {
            transition: all 0.3s ease;
        }

        .page-transition:hover {
            transform: translateY(-2px);
        }
    </style>

<AdminLayout PageTitle="404" PageHeader="404" UserName="Bishal Biswas">
    <div class="404Container relative bg-linear-to-br from-blue-50 to-indigo-100 min-h-screen flex items-center justify-center p-4">
        <div class="max-w-4xl w-full">
            <div class="text-center">
                <!-- Animated 404 Number -->
                <div class="relative mb-8">
                    <div class="floating">
                        <h1 class="text-[128px] md:text-[12rem] font-bold text-gray-800 relative">
                            <span class="glowing">4</span>
                            <span class="glowing" style="animation-delay: 0.2s">0</span>
                            <span class="glowing" style="animation-delay: 0.4s">4</span>
                        </h1>
                    </div>
                    <div class="absolute -top-4 -right-4 w-24 h-24 bg-yellow-400 rounded-full opacity-20 blur-xl"></div>
                    <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-blue-400 rounded-full opacity-20 blur-xl"></div>
                </div>
    
                <!-- Error Message -->
                <div class="mb-8">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Oops! Page Not Found</h2>
                    <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
                        The page you're looking for seems to have wandered off into the digital wilderness.
                        Don't worry, even the best explorers sometimes take wrong turns!
                    </p>
                </div>
    
                <!-- Search Bar -->
                <div class="max-w-md mx-auto mb-8">
                    <div class="relative">
                        <input type="text" placeholder="What are you looking for?"
                            class="w-full px-6 py-4 pr-12 border border-gray-300 rounded-2xl focus:outline-none focus:ring-4 focus:ring-blue-500 focus:border-blue-500 text-lg shadow-lg">
                        <button
                            class="absolute right-3 top-1/2 transform -translate-y-1/2 bg-blue-600 hover:bg-blue-700 text-white p-2 rounded-xl transition-colors">
                            <i class="fas fa-search text-lg"></i>
                        </button>
                    </div>
                </div>
    
                <!-- Quick Actions -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 max-w-2xl mx-auto">
                    <a href="/"
                        class="page-transition bg-white p-6 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl group">
                        <div
                            class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mb-4 mx-auto group-hover:bg-blue-200 transition-colors">
                            <i class="fas fa-home text-blue-600 text-2xl"></i>
                        </div>
                        <h3 class="font-semibold text-gray-800 mb-2">Go Home</h3>
                        <p class="text-gray-600 text-sm">Return to the homepage</p>
                    </a>
    
                    <a href="/contact"
                        class="page-transition bg-white p-6 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl group">
                        <div
                            class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mb-4 mx-auto group-hover:bg-green-200 transition-colors">
                            <i class="fas fa-life-ring text-green-600 text-2xl"></i>
                        </div>
                        <h3 class="font-semibold text-gray-800 mb-2">Get Help</h3>
                        <p class="text-gray-600 text-sm">Contact support team</p>
                    </a>
    
                    <a href="#" onclick="history.back()"
                        class="page-transition bg-white p-6 rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl group">
                        <div
                            class="w-16 h-16 bg-purple-100 rounded-2xl flex items-center justify-center mb-4 mx-auto group-hover:bg-purple-200 transition-colors">
                            <i class="fas fa-arrow-left text-purple-600 text-2xl"></i>
                        </div>
                        <h3 class="font-semibold text-gray-800 mb-2">Go Back</h3>
                        <p class="text-gray-600 text-sm">Return to previous page</p>
                    </a>
                </div>
    
                <!-- Popular Pages -->
                <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 max-w-2xl mx-auto">
                    <h3 class="text-2xl font-bold text-gray-800 mb-6">Popular Pages You Might Like</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <a href="/products"
                            class="flex items-center p-4 rounded-xl hover:bg-gray-50 transition-colors group">
                            <div
                                class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center mr-4 group-hover:bg-orange-200">
                                <i class="fas fa-shopping-bag text-orange-600"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-800">Products</h4>
                                <p class="text-gray-600 text-sm">Browse our collection</p>
                            </div>
                        </a>
                        <a href="/blog" class="flex items-center p-4 rounded-xl hover:bg-gray-50 transition-colors group">
                            <div
                                class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4 group-hover:bg-blue-200">
                                <i class="fas fa-newspaper text-blue-600"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-800">Blog</h4>
                                <p class="text-gray-600 text-sm">Read latest articles</p>
                            </div>
                        </a>
                        <a href="/about" class="flex items-center p-4 rounded-xl hover:bg-gray-50 transition-colors group">
                            <div
                                class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4 group-hover:bg-green-200">
                                <i class="fas fa-info-circle text-green-600"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-800">About Us</h4>
                                <p class="text-gray-600 text-sm">Learn our story</p>
                            </div>
                        </a>
                        <a href="/support"
                            class="flex items-center p-4 rounded-xl hover:bg-gray-50 transition-colors group">
                            <div
                                class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center mr-4 group-hover:bg-red-200">
                                <i class="fas fa-headset text-red-600"></i>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-800">Support</h4>
                                <p class="text-gray-600 text-sm">Get help & FAQs</p>
                            </div>
                        </a>
                    </div>
                </div>
    
                <!-- Fun Illustration or Message -->
                <div class="mt-12 text-center">
                    <div class="inline-flex items-center bg-yellow-100 border border-yellow-200 rounded-2xl px-6 py-4">
                        <i class="fas fa-compass text-yellow-600 text-2xl mr-3"></i>
                        <p class="text-yellow-800 font-medium">
                            Lost but not alone! Our support team is here to guide you.
                        </p>
                    </div>
                </div>
    
                <!-- Social Links -->
                <div class="mt-8 flex justify-center space-x-6">
                    <a href="#" class="text-gray-600 hover:text-blue-600 transition-colors">
                        <i class="fab fa-twitter text-2xl"></i>
                    </a>
                    <a href="#" class="text-gray-600 hover:text-blue-800 transition-colors">
                        <i class="fab fa-facebook text-2xl"></i>
                    </a>
                    <a href="#" class="text-gray-600 hover:text-pink-600 transition-colors">
                        <i class="fab fa-instagram text-2xl"></i>
                    </a>
                    <a href="#" class="text-gray-600 hover:text-blue-500 transition-colors">
                        <i class="fab fa-linkedin text-2xl"></i>
                    </a>
                </div>
            </div>
        </div>
    
        <!-- Background Decorations -->
        <div class="absolute top-10 left-10 w-20 h-20 bg-blue-200 rounded-full opacity-20 blur-xl"></div>
        <div class="absolute top-20 right-20 w-16 h-16 bg-purple-200 rounded-full opacity-30 blur-xl"></div>
        <div class="absolute bottom-20 left-20 w-24 h-24 bg-green-200 rounded-full opacity-20 blur-xl"></div>
        <div class="absolute bottom-10 right-10 w-12 h-12 bg-yellow-200 rounded-full opacity-30 blur-xl"></div>
    </div>

    <script is:inline>
        document.addEventListener('DOMContentLoaded', function () {
            // Add some interactive elements
            const searchInput = document.querySelector('input[type="text"]');
            const searchButton = document.querySelector('button');

            // Focus search input on page load
            setTimeout(() => {
                searchInput.focus();
            }, 1000);

            // Search functionality
            searchButton.addEventListener('click', function () {
                const query = searchInput.value.trim();
                if (query) {
                    alert(`Searching for: "${query}"\n\nIn a real application, this would redirect to search results.`);
                } else {
                    searchInput.focus();
                }
            });

            // Enter key support for search
            searchInput.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    searchButton.click();
                }
            });

            // Add floating animation to quick action cards on hover
            document.querySelectorAll('.page-transition').forEach(card => {
                card.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-8px) scale(1.02)';
                });

                card.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });

            // Random fun fact generator
            const funFacts = [
                "Did you know? The first 404 error was discovered in a cave painting.",
                "Fun fact: 404 pages are like digital hide and seek champions!",
                "Here's a thought: Even websites need coffee breaks sometimes.",
                "Interesting: This page is more popular than some actual content!",
                "FYI: Our support team loves helping lost visitors like you!"
            ];

            // Change the fun message every 10 seconds
            setInterval(() => {
                const funMessage = document.querySelector('.text-yellow-800');
                const randomFact = funFacts[Math.floor(Math.random() * funFacts.length)];
                funMessage.textContent = randomFact;
            }, 10000);
        });
    </script>
</AdminLayout>