                    <p class="text-gray-500 text-xs mt-1">Leave empty to auto-generate from name</p>
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-medium mb-2">Description</label>
                    <textarea id="category-description" rows="3"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        placeholder="Brief description of the category"></textarea>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-2">Parent Category</label>
                        <select id="parent-category"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="">None (Top Level)</option>
                            <option value="1">Technology</option>
                            <option value="2">Business</option>
                            <option value="3">Entertainment</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-medium mb-2">Color</label>
                        <input type="color" id="category-color"
                            class="w-full h-10 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                            value="#3b82f6">
                    </div>
                </div>
                <div>
                    <label class="flex items-center">
                        <input type="checkbox" id="category-active"
                            class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" checked>
                        <span class="ml-2 text-sm text-gray-700">Active Category</span>
                    </label>
                </div>
            </form>
            <div class="p-6 border-t border-gray-200 flex justify-end space-x-3">
                <button id="cancel-category"
                    class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-gray-50">
                    Cancel
                </button>
                <button id="save-category"
                    class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium">
                    Save Category
                </button>
            </div>
        </div>
    </div>

    <script is:inline>
        document.addEventListener('DOMContentLoaded', function () {
            const modal = document.getElementById('category-modal');
            const form = document.getElementById('category-form');
            const modalTitle = document.getElementById('modal-title');
            const categoryName = document.getElementById('category-name');
            const categorySlug = document.getElementById('category-slug');

            // Auto-generate slug from category name
            categoryName.addEventListener('input', function () {
                if (!categorySlug.value) {
                    const slug = this.value.toLowerCase()
                        .replace(/[^\w ]+/g, '')
                        .replace(/ +/g, '-');
                    categorySlug.value = slug;
                }
            });

            // New Category Button
            document.getElementById('new-category-btn').addEventListener('click', function () {
                modalTitle.textContent = 'Add New Category';
                form.reset();
                modal.classList.remove('hidden');
            });

            // Edit Category Buttons
            document.querySelectorAll('.edit-category').forEach(button => {
                button.addEventListener('click', function () {
                    const categoryId = this.getAttribute('data-id');
                    // In real app, you would fetch category data
                    modalTitle.textContent = 'Edit Category';
                    categoryName.value = 'Technology';
                    categorySlug.value = 'technology';
                    document.getElementById('category-description').value = 'Latest tech news and updates';
                    modal.classList.remove('hidden');
                });
            });

            // Delete Category Buttons
            document.querySelectorAll('.delete-category').forEach(button => {
                button.addEventListener('click', function () {
                    const categoryId = this.getAttribute('data-id');
                    if (confirm('Are you sure you want to delete this category? This action cannot be undone.')) {
                        // In real app, you would delete the category
                        alert('Category deleted successfully!');
                    }
                });
            });

            // Restore Category Buttons
            document.querySelectorAll('.restore-category').forEach(button => {
                button.addEventListener('click', function () {
                    const categoryId = this.getAttribute('data-id');
                    // In real app, you would restore the category
                    alert('Category restored successfully!');
                });
            });

            // Cancel Button
            document.getElementById('cancel-category').addEventListener('click', function () {
                modal.classList.add('hidden');
                form.reset();
            });

            // Save Category Button
            document.getElementById('save-category').addEventListener('click', function () {
                const name = categoryName.value;
                if (name) {
                    // In real app, you would save the category
                    alert(`Category "${name}" saved successfully!`);
                    modal.classList.add('hidden');
                    form.reset();
                } else {
                    alert('Please enter a category name');
                }
            });

            // Close modal when clicking outside
            modal.addEventListener('click', function (e) {
                if (e.target === this) {
                    this.classList.add('hidden');
                }
            });
        });
    </script>
