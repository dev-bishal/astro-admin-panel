<canvas id="myChart"></canvas>

<script is:inline>
    const ctx = document.getElementById("myChart").getContext("2d");
    // Create Gradient
    const gradient1 = ctx.createLinearGradient(0, 0, 0, 200);
    gradient1.addColorStop(0, "rgba(37, 136, 217, 1)");
    gradient1.addColorStop(1, "rgba(37, 136, 217, 0)");

    // Create Gradient
    const gradient2 = ctx.createLinearGradient(0, 0, 0, 200);
    gradient2.addColorStop(0, "rgba(217, 133, 37, 1)");
    gradient2.addColorStop(1, "rgba(217, 133, 37, 0)");

    // Create Gradient
    const gradient3 = ctx.createLinearGradient(0, 0, 0, 200);
    gradient3.addColorStop(0, "rgba(117, 229, 89, 1)");
    gradient3.addColorStop(1, "rgba(117, 229, 89, 0)");

    const data = {
        labels: [10, 20, 30, 40, 50, 60, 70, 80],
        datasets: [
            {
                label: "Google",
                data: [30, 20, 15, 15, 10],
                tension: 0.4,
                borderColor: "rgba(37, 136, 217, 1)",
                backgroundColor: gradient1,
                fill: true,
                pointRadius: 3,
            },
            {
                label: "Direct",
                data: [10, 30, 25, 45, 40],
                tension: 0.4,
                borderColor: "rgba(217, 133, 37, 1)",
                backgroundColor: gradient2,
                fill: true,
                pointRadius: 3,
            },
            {
                label: "LinkTree",
                data: [20, 50, 45, 5, 60],
                tension: 0.4,
                borderColor: "rgba(117, 229, 89, 1)",
                backgroundColor: gradient3,
                fill: true,
                pointRadius: 3,
            },
        ],
    };
    const config = {
        type: "line",
        data,
        options: {
            animation: {
                duration: 1500,
                easing: "easeOutBounce",
            },
            scales: {
                x: {
                    type: "linear",
                    bounds: "data",
                },
            },
        },
    };
    new Chart(ctx, config);
</script>
